{
  "type": "object",
  "required": ["config"],
  "properties": {
    "config": {
      "required": ["openid", "acl", "internal_users", "kafka"],
      "type": "object",
      "properties": {
        "openid": {
          "type": "object",
          "required": [
            "connect_url",
            "client_id",
            "client_secret",
            "subject_key",
            "roles_key"
          ],
          "properties": {
            "connect_url": {
              "type": "string"
            },
            "client_id": {
              "type": "string"
            },
            "client_secret": {
              "type": "string"
            },
            "subject_key": {
              "type": "string"
            },
            "roles_key": {
              "type": "string"
            }
          }
        },
        "acl": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "authorize_publish", "authorize_subscribe"],
            "properties": {
              "name": {
                "type": "string"
              },
              "authorize_publish": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "authorize_subscribe": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        },
        "kafka": {
          "type": "object",
          "required": ["publish"],
          "properties": {
            "publish": {
              "type": "object",
              "required": [
                "connect_events",
                "disconnect_events",
                "client_events"
              ],
              "properties": {
                "connect_event": {
                  "type": "object",
                  "required": ["topic"],
                  "topic": {
                    "type": "string"
                  }
                },
                "disconnect_event": {
                  "type": "object",
                  "required": ["topic"],
                  "topic": {
                    "type": "string"
                  }
                },
                "client_events": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["mqtt_topic", "topic"],
                    "properties": {
                      "mqtt_topic": {
                        "type": "string"
                      },
                      "topic": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "internal_users": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["username", "password"],
            "properties": {
              "username": {
                "type": "string"
              },
              "password": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
